<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="#ffffff"
>


    <ImageView

            android:src="@drawable/logo"
            android:id="@+id/iv_login_act_logo"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginVertical="70dp"
    />

    <EditText
            android:id="@+id/edt_login_id"
            android:paddingStart="10dp"
            android:hint="ID"
            android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginHorizontal="30dp"
              android:layout_marginTop="10dp"
              android:background="@drawable/primary_border"
    />
    <EditText
            android:id="@+id/edt_login_pw"
            android:paddingStart="10dp"
            android:hint="PW"
            android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginHorizontal="30dp"
              android:layout_marginTop="10dp"
              android:background="@drawable/primary_border"
    />

    <Button android:id="@+id/btn_login_submit"

            android:text="로그인"
            android:background="@drawable/primary_border_btn"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="아직 회원이 아니십니까?"/>
        <TextView
                android:id="@+id/tv_login_singup"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="회원가입"/>

    </LinearLayout>

</LinearLayout>