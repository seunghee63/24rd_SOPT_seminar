<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:paddingHorizontal="30dp"
                android:layout_width="match_parent" android:layout_height="48dp">
            <TextView
                    android:id="@+id/tv_write_comment_activity_cancel"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="취소"/>
            <TextView
                    android:id="@+id/tv_write_comment_activity_submit"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryYellow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="확인"/>
        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="#E0E0E0"
        />
        <RelativeLayout
                android:paddingHorizontal="30dp"
                android:layout_width="match_parent" android:layout_height="48dp">
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="제목"/>
            <EditText
                    android:background="@null"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="제목을 입력하세요."/>
        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="#E0E0E0"
        />
        <EditText
                android:id="@+id/et_comment_act_write_comment"
                android:textSize="13sp"
                android:background="@null"
                android:gravity="top"
                android:padding="20dp"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:hint="여기를 눌러서 글을 작성할 수 있습니다. 기다릴개에서 당신의 동물의 이야기를 들려주세요:) 이미지는 최대 4장까지 첨부 가능합니다."/>


    </LinearLayout>
    <RelativeLayout
            android:paddingHorizontal="10dp"
            android:layout_above="@+id/camera"
            android:layout_width="match_parent" android:layout_height="100dp"
                    android:background="#F1F1F1">
        <ImageView
                android:id="@+id/iv_comments_act_write_roll"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@drawable/writing_plus_btn"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/camera"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="30dp"
            android:layout_width="match_parent" android:layout_height="60dp">
        <ImageView
                android:id="@+id/iv_comments_act_write_camera_btn"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/camera_btn"
        />
    </RelativeLayout>
</RelativeLayout>