<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="#FFFFFF"
        android:orientation="vertical"
>

    <ImageView android:layout_width="250dp" android:layout_height="100dp"
               android:layout_marginVertical="70dp"
               android:layout_gravity="center"
               android:src="@drawable/logo_img"/>

    <EditText
            android:id="@+id/et_signup_id"
            android:layout_width="match_parent" android:layout_height="45dp"
            android:paddingHorizontal="15dp" android:layout_marginBottom="10dp"
            android:background="@drawable/gray_border"
            android:layout_marginHorizontal="35dp" android:hint="아이디"/>
    <EditText
            android:id="@+id/et_signup_pw"
            android:layout_width="match_parent" android:layout_height="45dp"
            android:paddingHorizontal="15dp" android:layout_marginBottom="10dp"
            android:background="@drawable/gray_border"
            android:layout_marginHorizontal="35dp" android:hint="패스워드"/>
    <EditText
            android:id="@+id/et_signup_name"
            android:layout_width="match_parent" android:layout_height="45dp"
            android:paddingHorizontal="15dp" android:layout_marginBottom="10dp"
            android:background="@drawable/gray_border"
            android:layout_marginHorizontal="35dp" android:hint="이름"/>

    <Button
            android:id="@+id/btn_signup_submit"
            android:layout_width="match_parent" android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="35dp"
            android:background="@drawable/yellow_btn"
            android:text="회원가입"
            android:textSize="16dp" android:textColor="#ffffff" android:textStyle="bold"/>



</LinearLayout>